<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/shape_divider"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        android:id="@+id/user_avatar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/normal_padding"
        android:paddingTop="@dimen/inner_padding"
        android:paddingEnd="@dimen/normal_padding"
        android:paddingBottom="@dimen/inner_padding">

        <TextView
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_color"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/text_avatar"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/user_avatar_side"
            android:layout_height="@dimen/user_avatar_side"
            android:scaleType="centerCrop"
            android:src="@color/red_400" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/ic_indicator_arrow_right"
            android:tint="@color/icon_tint_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_nickname_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/option_item_height"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/normal_padding"
        android:paddingEnd="@dimen/normal_padding">

        <TextView
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_color"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/text_nickname"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/user_nickname"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="张三"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/ic_indicator_arrow_right"
            android:tint="@color/icon_tint_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_account_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/option_item_height"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/normal_padding"
        android:paddingEnd="@dimen/normal_padding">

        <TextView
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_color"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/text_funchat_account"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/user_account"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="253908058"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/ic_indicator_arrow_right"
            android:tint="@color/icon_tint_color"
            android:gravity="center_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/user_sex_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/option_item_height"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/normal_padding"
        android:paddingEnd="@dimen/normal_padding">

        <TextView
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_color"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="性别"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/user_sex"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="男"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/ic_indicator_arrow_right"
            android:tint="@color/icon_tint_color" />

    </LinearLayout>

</LinearLayout>